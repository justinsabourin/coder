version: '2'
services:
  node1:
    build: 
      context: ./app
      dockerfile: Dockerfile.old
    volumes:
      - repositories:/home/server/repositories
    links:
      - memcached
      - mongo
    ports:
      - "80:8080"
      - "443:8082"
  mongo:
    image: mongo
    ports:
      - "27017"
  memcached:
    image: memcached:alpine
    ports:
      - "11211"
volumes:
  repositories:
    driver: local